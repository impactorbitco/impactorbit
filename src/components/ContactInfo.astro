---
import Icon from './Icon.astro';

export interface Contact {
  icon: string; // Matches Icon.astro `name`
  title: string;
  text: string;
}

export interface Props {
  items: Contact[];
  size?: string; // Tailwind icon size classes
  gap?: string;  // Tailwind gap classes
}

const { items = [], size = 'w-5 h-5', gap = 'gap-3' } = Astro.props;

// Return nothing if no items
if (!items.length) return null;
---

<div class="space-y-4">
  {items.map((info) => (
    <div class={`flex items-start ${gap}`} key={info.title}>
      <Icon
        name={info.icon}
        class={`${size} text-secondary-500 mt-1 flex-shrink-0 fill-current`}
        ariaLabel={info.title}
      />
      <div class="flex-1">
        <h3 class="text-lg font-semibold text-black dark:text-white">{info.title}</h3>
        <p class="text-gray-600 dark:text-gray-300">{info.text}</p>
      </div>
    </div>
  ))}
</div>