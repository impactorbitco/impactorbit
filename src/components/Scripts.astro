---
/* Static script loader for vendor + main JS */
---

<!-- Scroll Top -->
<a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
  <i class="bi bi-arrow-up-short"></i>
</a>

<!-- Preloader -->
<div id="preloader"></div>

<!-- Vendor JS Files -->
<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js" is:inline></script>
<script src="/vendor/php-email-form/validate.js" is:inline></script>
<script src="/vendor/aos/aos.js" is:inline></script>
<script src="/vendor/swiper/swiper-bundle.min.js" is:inline></script>
<script src="/vendor/glightbox/js/glightbox.min.js" is:inline></script>
<script src="/vendor/imagesloaded/imagesloaded.pkgd.min.js" is:inline></script>
<script src="/vendor/isotope-layout/isotope.pkgd.min.js" is:inline></script>

<!-- Initialise Vendor Plugins -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // AOS Animations
    if (window.AOS) {
      AOS.init({ duration: 800, once: true });
    }

    // GLightbox
    if (window.GLightbox) {
      GLightbox({ selector: '.glightbox' });
    }

    // Swiper
    if (window.Swiper) {
      new Swiper('.swiper', {
        loop: true,
        autoplay: { delay: 5000 },
        pagination: { el: '.swiper-pagination', clickable: true }
      });
    }
  });
</script>

<!-- Main Template JS -->
<script src="/js/main.js" is:inline></script>