---
const { city } = Astro.props;

const {
  id = "unknown",
  name = "Unnamed City",
  featuredImage = "/images/default-featured.jpg",
  description = "",
} = city;
---

<a
  href={`/locations/cities/${id}`}
  class="relative block h-72 rounded-xl overflow-hidden shadow-lg group flex flex-col"
>
  <img
    src={featuredImage}
    alt={name}
    class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
  />

  <div class="absolute inset-0 bg-black/40 group-hover:bg-black/30 transition-colors duration-500"></div>

  <div class="relative z-10 flex flex-col justify-between h-full text-white p-6">
    <h2 class="text-2xl font-bold text-center">{name}</h2>
    <p class="text-white/90 mt-2">{description.slice(0, 120)}{description.length > 120 ? "…" : ""}</p>
    <div class="flex justify-center mt-4">
      <span class="inline-block px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-lg transition text-center">
        Learn More →
      </span>
    </div>
  </div>
</a>