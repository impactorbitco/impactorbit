---
import jobsData from '../../data/jobs.json';

// Generate slug from title if missing
const generateSlug = (title) =>
  title.toLowerCase().replace(/[^\w\s-]/g, '').replace(/\s+/g, '-');

// Prepare jobs with slug
const jobs = jobsData.map(job => ({
  ...job,
  slug: job.slug || generateSlug(job.title),
}));
---
<!-- Current Vacancies -->
<section class="py-16 bg-white dark:bg-primary-500">
  <div class="container-custom max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">Current Vacancies</h2>
    <div class="space-y-8">
      {jobs.map(job => (
        <div class="grid md:grid-cols-2 gap-12 items-center border border-gray-200 dark:border-accent-500 p-6 rounded-xl shadow" key={job.slug}>
          <div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{job.title}</h3>

            <!-- Location -->
            <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-accent-500 text-green-800 dark:text-white mb-4">
              {job.location}
            </span>

            <!-- Job Description -->
            <p class="text-gray-700 dark:text-white mb-4">{job.description}</p>

            <!-- Basic Info -->
            <ul class="text-sm text-gray-800 dark:text-gray-200 space-y-1 mb-4">
              {job.salary && <li><strong>Salary:</strong> {job.salary}</li>}
              {job.hours && <li><strong>Hours:</strong> {job.hours}</li>}
              {job.contract_length && <li><strong>Contract:</strong> {job.contract_length}</li>}
              {job.work_pattern && <li><strong>Work Pattern:</strong> {job.work_pattern}</li>}
              {job.closing_date && <li><strong>Closing Date:</strong> {job.closing_date}</li>}
            </ul>

            <!-- Skills + Experience -->
            <div class="flex flex-wrap gap-2 mb-4">
              {job.skills.map(skill => (
                <span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-secondary-500 text-gray-800 dark:text-white" key={skill}>
                  {skill}
                </span>
              ))}
              <span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-secondary-500 text-gray-800 dark:text-white">
                {job.experience}
              </span>
            </div>

            <a href={`/careers/${job.slug}`} class="btn-primary">Apply Now</a>
          </div>

          <!-- Image -->
          <div class="rounded-lg overflow-hidden shadow-xl">
            <img src={job.image} alt={job.title} class="w-full h-auto"/>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>