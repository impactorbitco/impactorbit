---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';

// Import the React FAQ component
import FAQSearch from '../components/FAQSearch.jsx';
---

<Layout title="Frequently Asked Questions">

  <main class="py-8">
    <HeroSection 
      title="Frequently Asked Questions" 
      highlightText="Questions"
      description="Find answers to common questions about Sassify and our services."
    />

    <!-- Full-width FAQ section -->
    <section class="py-16 bg-white dark:bg-secondary-500">
      <div class="px-6 md:px-12 lg:px-24">
        <FAQSearch client:load />
      </div>
    </section>

    <!-- Full-width contact call-to-action -->
    <section class="py-16 bg-gray-50 dark:bg-secondary-600">
      <div class="px-6 md:px-12 lg:px-24 text-center">
        <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">
          Still have questions?
        </h3>
        <p class="text-gray-700 dark:text-gray-200 mb-8 max-w-2xl mx-auto">
          Our team is here to help. Contact us and we'll get back to you as soon as possible.
        </p>
        <a href="/contact" class="inline-block btn-primary">Contact Support</a>
      </div>
    </section>
  </main>
    <!-- Full-Width CTA -->
    <section class="w-full bg-secondary-500 py-16 text-white text-center">
      <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">Ready to collaborate?</h2>
        <p class="mb-8 text-lg sm:text-xl text-gray-200">Letâ€™s drive responsible growth for your organisation. Get in touch for a custom package or exploratory call.</p>
        <a href="/contact" class="inline-block w-full sm:w-auto px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-lg transition text-lg sm:text-xl">Contact Us</a>
      </div>
    </section>
</Layout>