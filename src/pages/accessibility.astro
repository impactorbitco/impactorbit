  <main class="py-8 scroll-smooth">
    <HeroSection 
      title="Accessibility Policy" 
      description="Our commitment to ensuring accessible digital experiences for everyone."
    />

    <section class="py-16 bg-white dark:bg-secondary-500">
      <div class="max-w-6xl mx-auto px-4 prose prose-lg dark:prose-invert">

        <!-- Table of Contents -->
        <nav class="mb-12 border-l-4 border-primary-500 pl-4">
