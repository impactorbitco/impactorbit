{
  "$ref": "#/definitions/service-areas",
  "definitions": {
    "service-areas": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 2
        },
        "slug": {
          "type": "string"
        },
        "h1": {
          "type": "string",
          "minLength": 5
        },
        "metaDescription": {
          "type": "string",
          "maxLength": 160
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "description": {
          "type": "string",
          "default": ""
        },
        "featuredImage": {
          "type": "string",
          "default": "/images/default-featured.jpg"
        },
        "localChallenges": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "howWeHelp": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "SDGs": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "default": []
        },
        "organisations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "h1",
        "metaDescription"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}